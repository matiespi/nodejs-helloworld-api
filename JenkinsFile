pipeline {
    agent any
    stages {
        stage('Git-Clone') {
            steps {
                script{
                    sh '''
                        sh 'curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.3/install.sh | bash'
                        // Activar NVM (es importante que esta línea esté después de la instalación)
                        sh 'export NVM_DIR="$HOME/.nvm"'
                        sh '[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"'
                        sh '[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"'
                        rm -rf /tmp/nodejs-helloworld-api/
                        cd /tmp/
                        git clone https://github.com/matiespi/nodejs-helloworld-api.git
                        cd /tmp/nodejs-helloworld-api
                        sudo apt update -y
                        sudo nvm install 18.12.1
                        sudo npm install --save-dev jest
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                sh"cd /tmp/nodejs-helloworld-api"
                sh "npm test"
            }
        }
    }
}