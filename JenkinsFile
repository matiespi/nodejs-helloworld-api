pipeline {
    agent any
    stages {
        stage('Git-Clone') {
            steps {
                script{
                    sh '''
                        rm -rf /tmp/nodejs-helloworld-api/
                        cd /tmp/
                        git clone https://github.com/matiespi/nodejs-helloworld-api.git
                        cd /tmp/nodejs-helloworld-api
                        sudo apt update -y
                        sudo apt install nodejs npm -y
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                sh"cd /tmp/nodejs-helloworld-api"
                sh "npm test"
            }
        }
    }
}