pipeline {
    agent any
    stages {
        stage('Git-Clone') {
            steps {
                script{
                    sh '''
                        rm -rf nodejs-helloworld-api.git/
                        cd /tmp
                        git clone https://github.com/matiespi/nodejs-helloworld-api.git
                        cd nodejs-helloworld-api.git
                        npm install
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                sh "npm test"
            }
        }
    }
}