pipeline {
    agent any
    stages {
        stage('Git-Clone') {
            steps {
                script{
                    sh '''
                        curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
                        source ~/.bashrc
                        command -v nvm
                        rm -rf /tmp/nodejs-helloworld-api/
                        cd /tmp/
                        git clone https://github.com/matiespi/nodejs-helloworld-api.git
                        cd /tmp/nodejs-helloworld-api
                        sudo apt update -y
                        sudo nvm install 18.12.1
                        sudo npm install --save-dev jest
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                sh"cd /tmp/nodejs-helloworld-api"
                sh "npm test"
            }
        }
    }
}